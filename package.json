{
    "name": "clean-node-api",
    "version": "2.2.0",
    "main": "index.js",
    "author": "Guilherme Ledes <ledes.guilherme@gmail.com>",
    "license": "MIT",
    "repository": "github.com/guilhermeledes/clean-node-api",
    "scripts": {
        "start": "node dist/main/server.js",
        "build": "rimraf dist && tsc -p tsconfig.build.json",
        "debug": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules --no-notify --inspect=0.0.0.0:9222 --exit-child ./dist/main/server.js",
        "watch": "tsc -w",
        "up": "npm run build && docker-compose up -d",
        "down": "docker-compose down",
        "clear-test": "jest --clearCache",
        "test": "jest --passWithNoTests --runInBand --no-cache",
        "test:verbose": "jest --passWithNoTests --runInBand",
        "test:unit": "yarn test -- --watch -c jest.unit.config.js",
        "test:integration": "yarn test -- --watch -c jest.integration.config.js",
        "test:staged": "yarn test -- --findRelatedTests",
        "test:ci": "yarn test -- --coverage",
        "coveralls": "npm run test:ci && coveralls < coverage/lcov.info",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@shelf/jest-mongodb": "^2.1.0",
        "@types/bcrypt": "^5.0.0",
        "@types/express": "^4.17.13",
        "@types/jest": "^27.0.2",
        "@types/jsonwebtoken": "^8.5.5",
        "@types/mongodb": "^3.0.*",
        "@types/node": "^16.10.3",
        "@types/supertest": "^2.0.11",
        "@types/validator": "^13.6.3",
        "@typescript-eslint/eslint-plugin": "^4.0.1",
        "@typescript-eslint/parser": "^4.0.0",
        "coveralls": "^3.1.1",
        "eslint": "^7.12.1",
        "eslint-config-standard-with-typescript": "^21.0.1",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^5.0.0",
        "git-commit-msg-linter": "^3.2.8",
        "husky": "^7.0.2",
        "jest": "^27.2.4",
        "lint-staged": "^11.2.0",
        "mockdate": "^3.0.5",
        "rimraf": "^3.0.2",
        "supertest": "^6.1.6",
        "ts-jest": "^27.0.5",
        "ts-node": "^10.2.1",
        "ts-node-dev": "^1.1.8",
        "typescript": "^4.4.3"
    },
    "dependencies": {
        "bcrypt": "^5.0.1",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "jsonwebtoken": "^8.5.1",
        "module-alias": "^2.2.2",
        "mongodb": "^3.0.*",
        "validator": "^13.6.0"
    },
    "engines": {
        "node": "14.x"
    },
    "_moduleAliases": {
        "@": "dist"
    }
}